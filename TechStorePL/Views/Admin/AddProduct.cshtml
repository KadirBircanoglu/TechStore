@model ProductDTO
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-file-text-o"></i>Ürünler</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                    <li><i class="icon_document_alt"></i>Ürünler</li>
                    <li><i class="fa fa-file-text-o"></i>Ürün Ekle</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Ürün Ekle
                    </header>
                    <div class="panel-body">
                        <form class="form-horizontal " asp-controller="Admin" asp-action="AddProduct" method="post">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Ürün Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="ProductName" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Seri No</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="SerialNumber">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Stok Miktarı</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="StockQuantity">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Fiyat</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" asp-for="UnitPrice">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Ürün Ekle</button>
                        </form>
                    </div>
                </section>
                    
            </div>
        </div>
    </section>
</section>
