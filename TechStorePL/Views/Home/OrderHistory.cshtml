@model List<OrderDTO>
@{
    ViewData["Title"] = "OrderHistory";
}

<div class="cart_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart_container">
                    <div class="cart_title"> @Model.Count adet sipariş bulunmaktadır.</div>
                    <div class="cart_items">
                        <ul class="cart_list">
                            @foreach (var item in Model)
                            {
                                <li class="cart_item clearfix">
                                    <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Sipariş Tarihi</div>
                                            <div class="cart_item_text">@item.CreatedDate.ToString("dd-MM-yyyy")</div>
                                        </div>

                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Sipariş No</div>
                                            <div class="cart_item_text">@item.OrderNo</div>
                                        </div>

                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Toplam Fiyat</div>
                                            <div class="cart_item_text">@item.TotalPrice</div>
                                        </div>
                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Sipariş Durumu</div>
                                            @if (item.IsCompleted)
                                            {
                                                <div class="cart_item_text" style="color:blue">Tamamlandı</div>
                                            }
                                            else
                                            {
                                                <div class="cart_item_text" style="color:red">Sipariş Alındı</div>
                                            }
                                        </div>

                                    </div>
                                </li>

                            }

                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


