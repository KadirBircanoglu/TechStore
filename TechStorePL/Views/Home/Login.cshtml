
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_TechStoreLayout.cshtml";
}

<div class="row">


    <div class="col-6 offset-3  offset-3 form-img">



        <form class="form" asp-controller="Home" asp-action="Login" method="post">
            <h3>Giriş Yapabilirsiniz</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="text" style="width:350px;" class="form-control" placeholder="Email" name="email" asp-for="@Model" />
            </div>
            <br />
            <div class="form-group">
                <input type="password" style="width:350px;" class="form-control" placeholder="Password" name="password" />
                <a asp-controller="Account" asp-action="ForgotPassword">Şifremi Unuttum</a>
            </div>
            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">GİRİŞ YAP</button>
            </div>
            <br />

            <div class="form-group">

                <button type="submit" class="btn btn-reg" asp-controller="Account" asp-action="Register">Kayıt Ol</button>
            </div>
        </form>
    </div>
</div>


