@model List<ProductDTO>?

<!-- Deals -->

<div class="deals">
	<div class="deals_title">HAFTANIN FIRSATLARI</div>
	<div class="deals_slider_container">

		<!-- Deals Slider -->
		<div class="owl-carousel owl-theme deals_slider">

			@foreach (var item in Model)
			{
				<!-- Deals Item -->
				<div class="owl-item deals_item">
					<div class="deals_image d-flex flex-column align-items-center justify-content-center">
						@if (item.ProductPictures != null && item.ProductPictures.Count > 0)
						{
							<img src="@item.ProductPictures.FirstOrDefault().PicturePath" alt=""
								 style="width:340px; height:340px;" />
						}
					</div>
					<div class="deals_content">

						<div class="deals_info_line d-flex flex-row justify-content-start">
                            <div class="deals_item_price_a ml-auto"><strike>@item.UnitPrice TL</strike></div>
						</div>
						<div class="deals_info_line d-flex flex-row justify-content-start">

							<div class="deals_item_name">
								@if (item.ProductName.Length > 30)
								{
									<a href="product.html">@item.ProductName.Substring(0,29) ...</a>
								}
								else
								{
									<a href="product.html">@item.ProductName</a>
								}
							</div>
							<div class="deals_item_price ml-auto">
								@if (item.ProductDiscount != null)
								{
									<div class="product_price discount">@(item.UnitPrice - (item.UnitPrice * item.ProductDiscount.Discount / 100)) TL</div>
								}
								else
								{
									<div class="product_price"><span>@item.UnitPrice</span></div>
								}
							</div>
						</div>
						<div class="available">
							<div class="available_line d-flex flex-row justify-content-start">
								<div class="available_title">Available: <span>6</span></div>
								<div class="sold_title ml-auto">Already sold: <span>28</span></div>
							</div>
							<div class="available_bar"><span style="width:17%"></span></div>
						</div>
						<div class="deals_timer d-flex flex-row align-items-center justify-content-start">
							<div class="deals_timer_title_container">
								<div class="deals_timer_title">Acele Et!</div>
								<div class="deals_timer_subtitle">Teklifin bitmesine:</div>
							</div>
							<div class="deals_timer_content ml-auto">
								<div class="deals_timer_box clearfix" data-target-time="">
									<div class="deals_timer_unit">
										<div id="deals_timer1_hr" class="deals_timer_hr"></div>
										<span>Saat</span>
									</div>
									<div class="deals_timer_unit">
										<div id="deals_timer1_min" class="deals_timer_min"></div>
										<span>Dakika</span>
									</div>
									<div class="deals_timer_unit">
										<div id="deals_timer1_sec" class="deals_timer_sec"></div>
										<span>Saniye</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>

	</div>

	<div class="deals_slider_nav_container">
		<div class="deals_slider_prev deals_slider_nav"><i class="fas fa-chevron-left ml-auto"></i></div>
		<div class="deals_slider_next deals_slider_nav"><i class="fas fa-chevron-right ml-auto"></i></div>
	</div>
</div>
