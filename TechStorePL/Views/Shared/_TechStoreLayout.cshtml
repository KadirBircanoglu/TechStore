                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </header>

        <!-- Characteristics -->
        @if (TempData["login"] != null)
        {

        }
        else
        {
            @await Component.InvokeAsync("Characteristics")

        }

        <!-- Single Blog Post -->
        @RenderBody()

        <!-- Newsletter -->

        <div class="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="newsletter_container d-flex flex-lg-row flex-column align-items-lg-center align-items-center justify-content-lg-start justify-content-center">
                            <div class="newsletter_title_container">
                                <div class="newsletter_icon"><img src="~/OneTech/images/send.png" alt=""></div>
                                <div class="newsletter_title">Değişiklikler için kaydolun!</div>
                                <div class="newsletter_text"><p>...ve ilk alışverişte %20 indirim kazanın!</p></div>
                            </div>
                            <div class="newsletter_content clearfix">
                                <form action="#" class="newsletter_form">
                                    <input type="email" class="newsletter_input" required="required" placeholder="Mail adresinizi girin">
                                    <button class="newsletter_button">Üye Olun!</button>
                                </form>
                                <div class="newsletter_unsubscribe_link"><a href="#">Üyelikten çık.</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

